{{> menu id="dashboard"}}

<div class="ui raised segment">
    <div class="ui center aligned segment">
        <div class="ui four statistics">
            <div class="statistic">
                <div class="value">
                    <i class="user icon"></i>
                </div>
                <div class="label">
                    {{user.name}}
                </div>
            </div>
            <div class="statistic">
                <div class="value">
                    <i class="{{idealweight}} dashboard icon"></i>
                </div>
                <div class="label">
                    Ideal Weight Indicator
                </div>
            </div>
            <div class="statistic">
                <div class="value">
                    <i class="heartbeat icon"></i>BMI
                </div>
                <div class="label">
                    BMI
                </div>
            </div>
            <div class="statistic">
                <div class="value">
                    <i class="doctor icon"></i>
                </div>
                <div class="label">
                <!--    ${member.getBMICategory()} -->
                </div>
            </div>
        </div>
    </div>

    <form class="ui segment form" action="/addassessment" method="POST">
        <h3 class="ui header">Add Assessment</h3>
        <div class="three fields">
            <div class="field">
                <label>Weight</label>
                <input placeholder="00.00kg" type="number" step=".01" name="weight" required>
            </div>
            <div class="field">
                <label>Chest</label>
                <input placeholder="00.00cm" type="number" step=".01" name="chest" required>
            </div>
            <div class="field">
                <label>Thigh</label>
                <input placeholder="00.00cm" type="number" step=".01" name="thigh" required>
            </div>
        </div>
        <div class="three fields">
            <div class="field">
                <label>Upper Arm</label>
                <input placeholder="00.00cm" type="number" step=".01" name="upperArm" required>
            </div>
            <div class="field">
                <label>Waist</label>
                <input placeholder="00.00cm" type="number" step=".01" name="waist" required>
            </div>
            <div class="field">
                <label>Hips</label>
                <input placeholder="00.00cm" type="number" step=".01" name="hips" required>
            </div>
        </div>
        <button class="ui blue submit button">Add Assessment</button>
    </form>

    <table class="ui celled table middle aligned">
        <thead>
        <tr>
            <th>Date</th>
            <th>Weight</th>
            <th>Chest</th>
            <th>Thigh</th>
            <th>Upper Arm</th>
            <th>Waist</th>
            <th>Hips</th>
            <th>Trend</th>
            <th>Comment</th>
            <th></th>
        </tr>
        </thead>
        <tbody>


        {{#each assessments}}
        <tr>
            <td>{{date}}</td>
            <td>{{weight}}</td>
            <td>{{chest}}</td>
            <td>{{thigh}}</td>
            <td>{{upperArm}}</td>
            <td>{{waist}}</td>
            <td>{{hips}}</td>
            <td>
                <div class="ui ${member.findTrend(assessment)}"></div>
            </td>
            <td>{{comment}}</td>
            <td>
                <a href="/dashboard/{{../user.id}}/deleteassessment/{{assessmentid}}" class="ui icon button">
                    <i class="icon trash"></i>
                </a>
            </td>
        </tr>
        {{/each}}

        </tbody>
    </table>
</div>