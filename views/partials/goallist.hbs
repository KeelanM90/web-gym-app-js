
<div class="ui segment">
    <form class="ui form" action="/dashboard/{{member.id}}/addgoal" method="POST">
        <h3 class="ui header">
            <i class="child icon"></i>
            Goals
        </h3>
        <div class="three fields">
            <div class="field">
                <label>Weight</label>
                <input placeholder="00.00kg" type="number" step=".01" name="weight" required>
            </div>
            <div class="field">
                <label>Chest</label>
                <input placeholder="00.00cm" type="number" step=".01" name="chest" required>
            </div>
            <div class="field">
                <label>Thigh</label>
                <input placeholder="00.00cm" type="number" step=".01" name="thigh" required>
            </div>
        </div>
        <div class="three fields">
            <div class="field">
                <label>Upper Arm</label>
                <input placeholder="00.00cm" type="number" step=".01" name="upperArm" required>
            </div>
            <div class="field">
                <label>Waist</label>
                <input placeholder="00.00cm" type="number" step=".01" name="waist" required>
            </div>
            <div class="field">
                <label>Hips</label>
                <input placeholder="00.00cm" type="number" step=".01" name="hips" required>
            </div>
        </div>
        <div class="three fields">
            <div class="ten wide field">
                <label>Comment</label>
                <input placeholder="Description" type="text" name="description" required>
            </div>
            <div class="field">
                <label>Date</label>
                <div class="ui fluid calendar" id="calendar2">
                    <div class="ui input left icon">
                        <i class="calendar icon"></i>
                        <input type="text" placeholder="Date" name="sessiondate"
                               value="{{date}}">
                    </div>
                </div>
                <script>
                    $('#calendar2').calendar({
                        type: 'date',
                        minDate: new Date(),
                    });
                </script>
            </div>
        </div>
        <button class="ui blue submit button">Add Goal</button>
    </form>
    <table class="ui celled table middle aligned">
        <thead>
        <tr>
            <th>Date</th>
            <th>Weight</th>
            <th>Chest</th>
            <th>Thigh</th>
            <th>Upper Arm</th>
            <th>Waist</th>
            <th>Hips</th>
            <th>Comment</th>
        </tr>
        </thead>
        <tbody>

        {{#each goals}}
            <tr>
                <td>{{date}}</td>
                <td>{{weight}}</td>
                <td>{{chest}}</td>
                <td>{{thigh}}</td>
                <td>{{upperArm}}</td>
                <td>{{waist}}</td>
                <td>{{hips}}</td>
                <td>{{comment}}</td>
            </tr>
        {{/each}}

        </tbody>
    </table>
</div>
